# Gazzali Research - Environment Configuration
# Copy this file to `.env` and fill in your API credentials.

OPENROUTER_API_KEY="sk-or-your-openrouter-key"
SERPER_API_KEY="serper-your-key"
JINA_API_KEY="jina-your-key"

# Optional overrides
MODEL_PATH=""
OUTPUT_PATH=""
TEMPERATURE="0.85"
PRESENCE_PENALTY="1.1"
MAX_WORKERS="1"
ROLLOUT_COUNT="1"

# OpenRouter call behaviour (tuned for faster failure on empty responses)
OPENROUTER_MAX_RETRIES="3"
OPENROUTER_TIMEOUT="180"
OPENROUTER_RETRY_BASE="0.5"
OPENROUTER_RETRY_MAX_SLEEP="6"

# Reporting model configuration
REPORT_MODEL="x-ai/grok-4-fast"
REPORT_CONTEXT_LIMIT="2000000"
REPORT_MAX_TOKENS="800000"

# ============================================================================
# Academic Research Settings
# ============================================================================
# These settings control academic-specific features for scholarly research.
# Enable academic mode for citation management, peer-reviewed source
# prioritization, and formal academic writing style.

# Citation Style
# Options: apa, mla, chicago, ieee
# Default: apa
# Description: Academic citation format for inline citations and bibliography
CITATION_STYLE="apa"

# Output Format
# Options: paper, review, proposal, abstract, presentation
# Default: paper
# Description: Document structure and format for generated reports
#   - paper: Full research paper with all sections
#   - review: Literature review focused on synthesis
#   - proposal: Research proposal with methodology and timeline
#   - abstract: Conference abstract (250-300 words)
#   - presentation: Presentation-ready summary with key points
OUTPUT_FORMAT="paper"

# Academic Discipline
# Options: general, stem, social, humanities, medical
# Default: general
# Description: Discipline-specific terminology and conventions
#   - general: Interdisciplinary, accessible language
#   - stem: Technical/scientific terminology, quantitative focus
#   - social: Social science frameworks, mixed methods
#   - humanities: Critical theory, interpretive analysis
#   - medical: Clinical terminology, evidence-based medicine
DISCIPLINE="general"

# Word Count Target
# Default: 8000
# Description: Target word count for generated reports (500-50000)
# Note: Abstract format typically uses 250-500 words
WORD_COUNT_TARGET="8000"

# Include Abstract
# Options: true, false
# Default: true
# Description: Include abstract section in reports (except abstract format)
INCLUDE_ABSTRACT="true"

# Include Methodology
# Options: true, false
# Default: true
# Description: Include methodology section in reports
INCLUDE_METHODOLOGY="true"

# Scholar Priority
# Options: true, false
# Default: true
# Description: Prioritize Google Scholar searches over general web search
# When enabled, Scholar tool is called before general search for academic sources
SCHOLAR_PRIORITY="true"

# Export Bibliography
# Options: true, false
# Default: false
# Description: Export bibliography to separate .bib file (BibTeX format)
EXPORT_BIBLIOGRAPHY="false"

# Minimum Peer-Reviewed Sources
# Default: 5
# Description: Minimum number of peer-reviewed sources to include
# System will warn if this threshold is not met
MIN_PEER_REVIEWED_SOURCES="5"

# Source Quality Threshold
# Range: 0-10
# Default: 7
# Description: Minimum quality score for sources (0=any, 10=highest quality)
# Scoring: peer-reviewed=10, institutional=7, general web=3
SOURCE_QUALITY_THRESHOLD="7"
